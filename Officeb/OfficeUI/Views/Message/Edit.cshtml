@model OfficeEntity.Message
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="row responsive">
    <div style="align-items:end" class="col-2">
        <a asp-controller="Message" asp-action="Index" class="btn  btn-user btn-block my-4"><i class="fa-solid fa-arrow-left" style="color:darkslateblue">&nbsp back</i></a>

    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <!-- Begin Page Content -->
    <div class="container-fluid mt-4">
        <div class="card o-hidden border-0 shadow-lg">
            <div class="card-body p-0">
                <!-- nested row within card body -->
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4" style="color:black"><b>Edit Message</b></h1>
                            </div>
                            <form class="user" method="post" [formgroup]='messageform' (ngsubmit)='create()'>
                              
                                <div class="form-group">
                                    <label>Title</label>
                                    <input type="text" asp-for="title" class="form-control" placeholder="Enter Title" required />
                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <textarea class="form-control" asp-for="content" rows="12" placeholder="Enter Content"></textarea>
                                </div>
                                <input type="submit" value="Edit" class="btn  btn-user btn-block my-4" style="background-color:mediumslateblue; color:white" />                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>