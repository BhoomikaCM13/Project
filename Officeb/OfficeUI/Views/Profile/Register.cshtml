@model OfficeEntity.Profile
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Register Page</h2>
<hr />
<form method="post"><center>
    <div class="form-group">
        <div class="text-center">
            <label for="Name">Name</label>
        </div>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <div class="text-center">
            <label for="Email">Email</label>
        </div>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <div class="text-center">
            <label for="Password">Password</label>
        </div>
        <input type="text" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <div class="text-center">
            <label for="Position">Position</label>
        </div>
        <input type="text" class="form-control" asp-for="Position">
    </div>
    <div class="form-group">
        <div class="text-center">
            <label for="Department">Department</label>
        </div>
        <input type="text" class="form-control" asp-for="Department">
    </div>
    <div class="form-group">
        <div class="text-center">
            <label for="UserName">UserName</label>
        </div>
        <input type="text" class="form-control" asp-for="UserName">
    </div>
    <input type="submit" class="btn btn-primary" value="Register"></center>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <center><div class="btn btn-secondary"><a asp-controller="Profile" asp-action="Login">Login</a></div></center>
</form>
