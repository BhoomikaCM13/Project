@model OfficeEntity.Profile
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!-- Begin Page Content -->
<section class="vh-75" style="background-color:lavender;">
    <script src="https://code.jquery.com/jquery-1.9.1.js"></script>
        <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://officesnapshots.com/wp-content/uploads/2021/05/fast-office-coworking-moscow-2-768x1152-compact.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height:fit-content"/>
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post">                                     
                                    <center> <h5 class="fw-normal mb-3 pb-3 text-uppercase" style="letter-spacing: 1px;align-content:center "><b>Sign into your account</b></h5></center>

                                    <div class="form-outline mb-4">
                                        <input type="email" class="form-control" asp-for="email" id="signinId" placeholder="Email Address">
                                        <label for="Email" class="form-label" ></label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" class="form-control" asp-for="password" id="signinPwd" placeholder="Password">

                                        <label for="Password"><i class="glyphicon glyphicon-user"></i></label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <center><input type="submit" class="btn " value="Login" asp-route-id="id" style="background-color:mediumslateblue; color:white"></center>
                                    </div>
                                   <center>
                                    <p class="mb-5 pb-lg-2" style="color:black">
                                        Don't have an account? <a asp-controller="Profile" asp-action="Register" style="color:mediumslateblue">Register</a>
                                    </p>
                                   </center>                                   
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</section>



