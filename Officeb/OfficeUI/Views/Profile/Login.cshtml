@model OfficeEntity.Profile
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Login</h2>
<hr />
<form method="post">
    <div class="form-group">
        <div class="text-center">
            <label for="Email">Email</label>
        </div>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <div class="text-center">
            <label for="Password">Password</label>
        </div>
        <input type="text" class="form-control" asp-for="Password">
    </div>
    <input type="submit" class="btn btn-primary" value="Login" asp-route-Id="Id">
    <button type="button" class="btn btn-secondary ">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <hr />
    <a asp-controller="Profile" asp-action="Register">Register</a>
</form>