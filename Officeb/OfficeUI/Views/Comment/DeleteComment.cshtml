@model OfficeEntity.Comment
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div>
    <a asp-controller="Comment" asp-action="CreateComment">Edit Comment</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Comment</h2>
    <div class=" form-group">
        <label>Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter comment id??" required />
    </div>
    <input type="submit" value="Delete" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
