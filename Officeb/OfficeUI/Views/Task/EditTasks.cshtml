@model OfficeEntity.Tasks;
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="row responsive">
    <div style="align-items:end" class="col-2">
        <a asp-controller="Task" asp-action="Index" class="btn  btn-user btn-block my-4"><i class="fa-solid fa-arrow-left" style="color:darkslateblue">&nbsp back</i></a>

    </div>
</div>

<!-- Begin Page Content -->
<div class="container-fluid mt-4">
    <div class="card o-hidden border-0 shadow-lg">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4" style="color:black">Edit Task</h1>
                            <p class="mb-4">
                                <small>
                                    Created On: 
                                    <strong>
                                        <span>@DateTime.Now</span>
                                    </strong>
                                </small>
                            </p>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" asp-for="title" class="form-control" placeholder="Task Title" required />
                            </div>
                           
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" asp-for="description" rows="12" placeholder="Enter Description"></textarea>
                            </div>
                           
                            <div class="form-group">
                                <label for="Status">Status</label>
                                <select class="form-control" asp-for="status">
                                    <option value="1">ToDo</option>
                                    <option value="2">Doing</option>
                                    <option value="3">Done</option>
                                </select>
                            </div>

                            <input type="submit" value="Edit" class="btn  btn-user btn-block my-4" style="background-color:mediumslateblue; color:white" />
                                  
                                    
                            @if (ViewBag.Status == "Ok")
                            {
                                <div class="alert alert-success">
                                    @ViewBag.message
                                </div>
                            }
                            else if (ViewBag.Status == "Error")
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.message
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>