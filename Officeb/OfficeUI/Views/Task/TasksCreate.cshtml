@model OfficeEntity.Tasks;
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="row responsive">
    <div style="align-items:end" class="col-2">
        <a asp-controller="Task" asp-action="Index" class="btn  btn-user btn-block my-4"><i class="fa-solid fa-arrow-left" style="color:darkslateblue">&nbsp back</i></a>

    </div>
</div>
<!-- Begin Page Content -->
<div class="container-fluid mt-4">
    <div class="card o-hidden border-0 shadow-lg">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create New Task</h1>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" asp-for="title" class="form-control" placeholder="Task Title" required />
                            </div>
                           
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" asp-for="description" rows="12" placeholder="Enter Description" required></textarea>
                            </div>
                         
                            <div class="form-group">
                                <label>Task Status</label>
                                <select class="form-control" asp-for="status">
                                    <option value="1">ToDo</option>
                                    <option value="2">Doing</option>
                                    <option value="3">Done</option>
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" value="Create" class="btn  btn-user btn-block my-4" style="background-color:mediumslateblue; color:white" />

                                </div>
                                <div class="col-6">
                                    <input type="reset" value="Cancel" class="btn btn-outline-danger btn-user btn-block my-4" />
                                </div>

                            </div>
                            @if (ViewBag.Status == "Ok")
                            {
                                <div class="alert alert-success">
                                    @ViewBag.message;
                                </div>
                            }

                            else if (ViewBag.Status == "Error")
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.message;
                                </div>
                            }
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>