@model OfficeEntity.Contactus


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" responsive">
    <div style="align-items:end" class="col-2">
        <a asp-controller="Home" asp-action="Index" class="btn  btn-user btn-block my-4"><i class="fa-solid fa-arrow-left" style="color:darkslateblue"> back</i></a>
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <!-- Begin Page Content -->
    <div class="container-fluid mt-4">
        <div class="card o-hidden border-0 shadow-lg">
            <div class="card-body p-0">
                
                <!-- Nested Row within Card Body -->

                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Fill Your Details</h1>
                            </div>
                            <form>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" asp-for="name" class="form-control" placeholder="Enter Name" required />
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" asp-for="email" class="form-control" placeholder="Enter Name" required />
                                </div>
                                <div class="form-group">
                                    <label>Contact</label>
                                    <input type="text" asp-for="phone" class="form-control" placeholder="Enter mobile number" required />
                                </div>
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea class="form-control" asp-for="message" rows="12" placeholder="Enter message" required ></textarea>
                                </div>
                                <div>
                                <input type="submit" value="Create"  onClick="UserContact()" class="btn  btn-user btn-block my-4" style="background-color:mediumslateblue; color:white" />
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

<script>
