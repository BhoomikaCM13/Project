<!DOCTYPE html>
<link href="~/css/site.css" rel="stylesheet" />
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OfficeUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/bf21391385.js" crossorigin="anonymous"></script>
    
</head>
<body style="background-color:lavender">
    <div class='dashboard'>
        <div class="dashboard-nav" style="background-color:rebeccapurple">
            <header>
                <a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a>
                <a href="#" class="brand-logo">
                    <div class="nav-item-divider"></div>
                    <i class="fa-solid fa-briefcase" style="color:white"></i><span>The Office</span>
                </a>
            </header>
            <nav class="dashboard-nav-list">
                <a class="nav-link text-dark dashboard-nav-item" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-gauge-high" style="color:floralwhite"></i>&nbsp;<span style="color:white">Home</span></a>
                <div class="nav-item-divider"></div>
                <div class="nav-item">
                    <a class="nav-link text-dark dashboard-nav-item" asp-area="" asp-controller="Profile" asp-action="Login"><i class=" fa-solid fa-right-to-bracket" style="color:floralwhite"></i>&nbsp;<span style="color:white">Login</span></a>
                </div>

                <div class="nav-item">
                    <a class="nav-link text-dark dashboard-nav-item" asp-area="" asp-controller="Profile" asp-action="Register"><i class="fa-solid fa-user-plus" style="color:floralwhite"></i>&nbsp;<span style="color:white">Register</span></a>
                </div>
            </nav>
        </div>
        <div class='dashboard-app'>
            <header class='dashboard-toolbar' style="background-color:lavender"><a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a></header>

        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
          </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    
</body>
</html>
