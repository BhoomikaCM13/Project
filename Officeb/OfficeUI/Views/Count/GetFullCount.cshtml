                                <div class="h5 mb-0 font-weight-bold text-gray-800" style="color:black">@Model.getTodayTask</div>
                            </div>
                            <div class="col-auto">
                                <fa-icon [icon]="faTasks" class="fa-2x text-gray-300"></fa-icon>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <!-- Comments Card -->
